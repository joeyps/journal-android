<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/cardview_spacing"
        android:paddingBottom="@dimen/cardview_spacing"
        android:paddingLeft="@dimen/cardview_spacing"
        android:paddingRight="@dimen/cardview_spacing"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/cardview_spacing"
        android:scrollbars="none"
        android:background="@color/app_bg_color">

    </ListView>
    <ImageButton
        android:id="@+id/button_add"
        android:layout_width="@dimen/floating_button_diameter"
        android:layout_height="@dimen/floating_button_diameter"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/floating_button_margin"
        android:layout_marginEnd="@dimen/floating_button_margin"
        android:layout_marginRight="@dimen/floating_button_margin"
        android:background="@drawable/bg_floating_button"
        android:src="@drawable/ic_action_new"
        android:stateListAnimator="@anim/anim_button_click"
        android:elevation="8dp"/>
</FrameLayout>